{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": [
    "env.d.ts",
    "src/**/*",
    "src-electron/*",
    "src/**/*.vue", 
    "../app/auto-import.d.ts"
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "importsNotUsedAsValues": "preserve",
    "strictPropertyInitialization": false,
    "paths": {
      "@client/*": ["../app/*"],
      "@core/*": ["../core/*"],
      "@composables/*": [ "../app/composables/*" ],
      "@plugins/*": [ "../app/plugins/*" ],
      "@modules/*": [ "../app/modules/*" ],
      "@store/*": [ "../app/store/*"]
    }
  },

  "references": [
    { "path": "./tsconfig.config.json" }
  ]
}
