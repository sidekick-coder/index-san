{
  "exclude": ["dist", "node_modules"],
  "include": ["tsup.config.ts" , "src/**/*"],
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,                  
    "forceConsistentCasingInFileNames": true,
    "strict": true,                           
    "skipLibCheck": true,
    "strictPropertyInitialization": false
  },
}