{
  "compilerOptions": {
    "target": "ES2019",
    "module": "CommonJS",
    "jsx": "preserve",
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "allowJs": true,
    "declaration": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ],
      "@core/*": [
        "../core/*"
      ]
    }
  },
  "include": ["electron", "src", "vite.config.ts"],
}
