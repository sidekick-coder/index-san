{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "jsx": "preserve",
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "allowJs": true,
    "declaration": false,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "strictNullChecks": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@root/*": [
        "../../*"
      ],
      "@core/*": [
        "../core/*"
      ],
      "@components/*": [
        "./components/*"
      ],
      "@composables/*": [
        "./composables/*"
      ],
      "@plugins/*": [
        "./plugins/*"
      ],
      "@modules/*": [
        "./modules/*"
      ],
      "@store/*": [
        "./store/*"
      ]
    }
  },
  "exclude": ["out", "dist", "scripts"],
}
