{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "composite": true,
    "jsx": "preserve",
    "esModuleInterop": true,
    "moduleResolution": "node16",
    "resolveJsonModule": true,
    "allowJs": true,
    "skipLibCheck": false,
    "allowSyntheticDefaultImports": true,
    "strictNullChecks": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@root/*": ["../../*"],
      "@core/*": ["../core/*"],
      "@components/*": ["./components/*"],
      "@composables/*": ["./composables/*"],
      "@plugins/*": ["./plugins/*"],
      "@modules/*": ["./modules/*"],
      "@store/*": ["./store/*"]
    }
  },
  "exclude": ["out", "dist", "scripts"],
}
