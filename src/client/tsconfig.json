{
    "compilerOptions": {
      "target": "esnext",
      "jsx": "preserve",
      "useDefineForClassFields": true,
      "module": "esnext",
      "lib": ["ESNext", "DOM"],
      "moduleResolution": "Node",
      "strict": true,
      "sourceMap": true,
      "resolveJsonModule": true,
      "esModuleInterop": true,
      "noEmit": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "noImplicitReturns": true,
      "baseUrl": ".",
      "paths": {
        "@/*": ["./*"]
      }
    },
    "include": ["./**/*.ts", "./**/*.vue"]
  }