// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:data.db"
}

model Archive {
  id        Int      @id @default(autoincrement())
  name      String   @unique
  source    String
  target    String
  createdAt DateTime @default(now())
}

model Template {
  id        Int      @id @default(autoincrement())
  name      String   @unique
  items TemplateItems[]
  createdAt DateTime @default(now())
}

model TemplateItems {
  id        Int      @id @default(autoincrement())
  template  Template @relation(fields: [templateId], references: [id])
  templateId Int
  name      String
  value     String
  isFolder  Boolean
  createdAt DateTime @default(now())
}
