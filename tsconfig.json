{
    "compilerOptions": {
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "target": "ESNext",
        "module": "commonjs",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "incremental": true,
        "outDir": "dist",
        "strict": true,
        "skipLibCheck": true,
        "skipDefaultLibCheck": true,
        "strictPropertyInitialization": false,
        "baseUrl": ".",
        "paths": {
            "IndexSan": [
                "app.ts"
            ],
            "App/*": [
                "app/*"
            ],
            "Helpers/*": [
                "helpers/*"
            ],
            "Tests/*": [
                "tests/*"
            ],
            "Entities/*": [
                "src/entities/*"
            ],
            "Repositories/*": [
                "src/repositories/*"
            ],
            "Errors/*": [
                "src/errors/*"
            ],
            "UseCases/*": [
                "src/use-cases/*"
            ],
            "Utils/*": [
                "src/utils/*"
            ],
            "TestRepositories/*": [
                "src/tests/repositories/*"
            ]
        }
    },
    "include": [
        "main.ts",
        "src/entities/*.ts",
        "src/entrypoint/*.ts",
        "src/errors/*.ts",
        "src/repositories/**/*.ts",
        "src/tests/**/*.ts",
        "src/use-cases/*.ts",
        "start/**/*.ts",
        "app/**/*.ts",
        "types/**/*.ts",
        "config/**/*.ts",
        "helpers/**/*.ts",
        "tests/**/*.ts",
        "bin/**/*.ts"
    ]
}
