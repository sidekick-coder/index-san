{
    "compilerOptions": {
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "target": "ESNext",
        "module": "commonjs",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "incremental": true,
        "outDir": "dist",
        "strict": true,
        "skipLibCheck": true,
        "skipDefaultLibCheck": true,
        "strictPropertyInitialization": false,
        "baseUrl": ".",
        "paths": {
            "App/*": [
                "app/*"
            ],
            "Tests/*": [
                "tests/*"
            ]
        }
    },
    "include": [
        "main.ts",
        "start/**/*.ts",
        "app/**/*.ts",
        "types/**/*.ts",
        "config/**/*.ts",
        "helpers/**/*.ts"
    ]
}
