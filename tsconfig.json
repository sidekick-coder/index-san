{
    "compilerOptions": {
        "target": "ESNext",
        "module": "commonjs",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "outDir": "dist",
        "strict": true,
        "skipLibCheck": true,
        "skipDefaultLibCheck": true,
        "strictPropertyInitialization": false,
    },
    "include": [
        "main.ts",
        "app/**/*.ts",
        "config/**/*.ts",
    ]
}
